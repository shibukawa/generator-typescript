{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "jsx": "react",
      "lib": ["dom", "es2017"],
      "module": "ES2015",
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "preserveConstEnums": true,
      "removeComments": false,
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,
      "target": "es5",
      "outDir": "dist"
    },
    "include": [
        "src"
    ]
  }
